<%- include('./header') %>


<form method="post" class="mx-1 mx-md-4" >
    <div class="d-flex flex-row align-items-center mb-4">
		<div class="form-outline flex-fill mb-0">
			<label class="form-label" for="form3Example1c">Details</label>
			<input type="text" name="details" id="details" value="<%=data.details %>" class="form-control" required/>
			
		</div>
	</div>

    <div class="d-flex flex-row align-items-center mb-4">
		<div class="form-outline flex-fill mb-0">
			<label class="form-label" for="form3Example1c">Sub Details</label>
			<input type="text" name="subdetails" id="subdetails" value="<%=data.subdetails %>" class="form-control" required/>
			
		</div>
	</div>
    
    
	<div class="d-flex flex-row align-items-center mb-4">
		<i class="fas fa-lock fa-lg me-3 fa-fw"></i>
		<div class="form-outline flex-fill mb-0">
			<label class="form-label" for="form3Example4c">Enter Description</label>
			<input type="text" name="enterdesc" id="enterdesc" value="<%=data.enterdesc %>" class="form-control" required/>
			
		</div>
	</div>
    
	<div class="d-flex flex-row align-items-center mb-4">
		<i class="fas fa-lock fa-lg me-3 fa-fw"></i>
		<div class="form-outline flex-fill mb-0">
			<label class="form-label" for="form3Example4c">Attache File</label>
			<input type="file" name="attachfile" id="enterdesc" value="<%=data.attachfile %>" class="form-control" required/>
			
		</div>
	</div>
    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
		<button type="submit" onclick="window.location" class="btn btn-primary btn-lg">Update</button>
	</div>
</form>