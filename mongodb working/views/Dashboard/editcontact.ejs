<%- include('./header') %>


<form method="post" class="mx-1 mx-md-4" >
    <div class="d-flex flex-row align-items-center mb-4">
		<div class="form-outline flex-fill mb-0">
			<label class="form-label" for="form3Example1c">Name</label>
			<input type="text" name="namecon" id="namecon" value="<%=data.namecon %>" class="form-control" required/>
			
		</div>
	</div>

    <div class="d-flex flex-row align-items-center mb-4">
		<div class="form-outline flex-fill mb-0">
			<label class="form-label" for="form3Example1c">Email address</label>
			<input type="text" name="emailcon" id="emailcon" value="<%=data.emailcon %>" class="form-control" required/>
			
		</div>
	</div>
    
    
	<div class="d-flex flex-row align-items-center mb-4">
		<i class="fas fa-lock fa-lg me-3 fa-fw"></i>
		<div class="form-outline flex-fill mb-0">
			<label class="form-label" for="form3Example4c">Subject</label>
			<input type="text" name="subjectcon" id="subjectcon" value="<%=data.subjectcon %>" class="form-control" required/>
			
		</div>
	</div>
    
	<div class="d-flex flex-row align-items-center mb-4">
		<i class="fas fa-lock fa-lg me-3 fa-fw"></i>
		<div class="form-outline flex-fill mb-0">
			<label class="form-label" for="form3Example4c">Message</label>
			<input type="text" name="msgcon" id="msgcon" value="<%=data.msgcon %>" class="form-control" required/>
			
		</div>
	</div>
    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
		<button type="submit" onclick="window.location" class="btn btn-primary btn-lg">Update</button>
	</div>
</form>