<%- include("./header.ejs") %>

    <%- include("./left.ejs") %>
        <% if(data.length>0) { %>

            <table border="1">
                <tr style="background-color: #ffffff;margin-left: 10px; font-size: 20px;">
                    <th align="center">Index</th>
                    <th>UserName</th>
                    <th>Email</th>

                    <th>Password</th>
                    <th colspan="2">Action</th>
                </tr>
                <% for(var i=0; i<data.length; i++) { %>
                    <tr style="background-color: rgb(250, 172, 227); font-size: 16px;">
                        <td>
                            <%= i %>
                        </td>
                        <td>
                            <%= data[i].username %>
                        </td>
                        <td>
                            <%= data[i].email %>
                        </td>
                        <td>
                            <%= data[i].password %>
                        </td>

                        <td>
                            <a href='/editregister/<%= data[i]._id %>'>
                                <button type="button" class="btn btn-primary">
                                    Edit
                                </button>
                            </a>
                        </td>
                        <td>
                            <a href='/delete/register/<%= data[i]._id %>'>
                                <button type="button" class="btn btn-Danger">
                                    Delete
                                </button>
                            </a>
                        </td>
                    </tr>
                    <% } %>

            </table>

            <% } else { %>
                No Record Found
                <% } %>